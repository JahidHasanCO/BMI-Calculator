<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        tools:context=".presentation.activity.ResultActivity">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/backgroundColor"
            android:fontFamily="@font/larsseit_bold"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Your Health"
            android:textColor="@color/textColor"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/deskImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginEnd="10dp"
            android:alpha=".7"
            android:src="@drawable/shelf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/larsseit_bold"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="21.2"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:textColor="@color/textColorAdditional"
            android:textSize="130sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />


        <TextView
            android:id="@+id/bmiText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/larsseit_bold"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="BMI = 22.96 kg/m2"
            android:textColor="@color/textColorAdditional"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/resultText" />

        <TextView
            android:id="@+id/bmiTextNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Normal BMI weight range for the height: 128.9lbs - 174.2lbs"
            android:alpha=".3"
            android:textColor="@color/textColorAdditional"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bmiText" />


        <LinearLayout
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bmiTextNormal">

            <ImageView
                android:id="@+id/deleteBtn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_delete"
                android:alpha=".3"
                android:padding="13dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                />


            <androidx.cardview.widget.CardView
                android:id="@+id/reloadCardView"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:cardBackgroundColor="@color/primaryColor"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_marginTop="1dp"
                    android:id="@+id/reloadBtn"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:src="@drawable/ic_rotate"
                    android:layout_gravity="center"
                    android:padding="13dp"
                    />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/shareBtn"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/ic_share"
                android:padding="13dp"
                android:alpha=".3"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>